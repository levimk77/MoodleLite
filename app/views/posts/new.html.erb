<h1>New post</h1>
<% if flash[:error] %>
    <% flash[:error].each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    <% end %>

<%= form_for @post do |f| %>
    <div>
    <%= f.hidden_field :course_id, :value => params[:id] %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
    </div>
    <%= f.submit %>
    <% end %>