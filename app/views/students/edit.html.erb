<h1>Settings</h1>
<% if flash[:error] %>
<% flash[:error].each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    <% end %>
<%= form_for @student do |x| %>
    <%= x.label "Name:" %>
    <%= x.text_field :name %>
    <%= x.label "Age:" %>
    <%= x.number_field :age %>
    <%= x.label "Email:" %>
    <%= x.email_field :email %>
    <%= x.label "Grade:" %>
    <%= x.select :year, $years %>
    <%= x.label "Major:" %>
    <%= x.select :major, $majors %>
    <%= x.submit %>
    <% end %>

    <%= form_for(@student, :method => :delete) do |f| %>
        <%= f.submit "Delete account" %>
        <% end %>