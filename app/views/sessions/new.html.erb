<div class="errors">
<% if flash[:message] %>
<%= flash[:message] %>
<% end %>
</div>
<h1 class = "loginh1">Welcome to MoodleLite!</h1>


<% if logged_in? %>
<h1> You are already logged in! <h1>
<% else %>
<div class = "login">
<%= form_tag "/sessions" do %>
    <%= label_tag "Email:" %>
    <%= text_field_tag :email %>
    <%= label_tag "Password:" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in", class: "button" %>
    <% end %>
    
    
    <div class = "form">
    <%= form_tag "/signup", method: :get do %>
        <%= submit_tag "Sign Up", class: "button" %>
    <% end %>
    </div>
    <% end %>
    </div>